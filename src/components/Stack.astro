---
interface Props {
  /**
   * Distance between items
   * @default "normal"
   */
  spacing?: "normal" | "tight" | "none";
}

const { spacing } = Astro.props;
---

<div
  class:list={[
    "stack",
    {
      tight: spacing === "tight",
      none: spacing === "none",
    },
  ]}
>
  <slot />
</div>

<style>
  .stack {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  .stack > * {
    margin-block: 0;
  }

  .stack > * + * {
    margin-block-start: 1rem;
  }

  .stack.tight > * + * {
    margin-block-start: 0.5rem;
  }

  .stack.none > * + * {
    margin-block-start: 0;
  }
</style>
