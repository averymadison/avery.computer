---
import { DialogueTree } from "@components";
// import { getEntry } from "astro:content";

// Enable when dialogue is ready to go
// const dialogue = await getEntry("dialogue", "dialogue");
---

<footer>
  <div class="links">
    <div class="link-col">
      <a
        href="https://github.com/evadecker"
        target="_blank"
        aria-label="Visit Eva's GitHub"
      >
        Github
      </a>
      <a
        href="https://linkedin.com/in/evadecker"
        target="_blank"
        aria-label="Visit Eva's LinkedIn"
      >
        LinkedIn
      </a>
      <a
        href="/eva-decker-resume.pdf"
        target="_blank"
        aria-label="View Eva's Resume"
      >
        Resume
      </a>
    </div>
  </div>
  <div class="dialogue">
    <DialogueTree dialogue="" client:visible />
  </div>
</footer>

<style lang="scss">
  footer {
    border-top: 1px solid var(--border);
    transition: border-color 1s ease-in-out;
    display: flex;
    width: 100%;
  }

  .links {
    padding: var(--spacing-lg);
    margin-right: auto;
    font-size: 0.9rem;
  }

  .link-col {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  a {
    font-family: var(--family-sans);
    display: inline;
    text-decoration: none;
    opacity: 0.7;

    &:hover {
      opacity: 1;
    }
  }

  .dialogue {
    align-self: flex-end;
  }
</style>
