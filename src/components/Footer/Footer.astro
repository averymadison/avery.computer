---
import { DialogueTree, Icon } from "@components";

// import { getEntry } from "astro:content";
import * as styles from "./footer.css";
import LastTended from "./LastTended.astro";

// Enable when dialogue is ready to go
// const dialogue = await getEntry("dialogue", "dialogue");
---

<footer class={styles.footer}>
  <div class={styles.footerContent}>
    <div class={styles.links}>
      <div class={styles.linkCol}>
        <a
          class={styles.link}
          href="https://github.com/evadecker"
          target="_blank"
          aria-label="Visit Eva's GitHub"
        >
          <Icon icon="github" variant="filled" className={styles.linkIcon} />
          <span class={styles.linkText}>Github</span>
        </a>
        <a
          class={styles.link}
          href="https://linkedin.com/in/evadecker"
          target="_blank"
          aria-label="Visit Eva's LinkedIn"
        >
          <Icon
            icon="linkedInBox"
            variant="filled"
            className={styles.linkIcon}
          />
          <span class={styles.linkText}>LinkedIn</span>
        </a>
        <a
          class={styles.link}
          href="/eva-decker-resume.pdf"
          target="_blank"
          aria-label="View Eva's Resume"
        >
          <Icon icon="download" className={styles.linkIcon} />
          <span class={styles.linkText}>Resume</span>
        </a>
      </div>
    </div>
    <LastTended />
  </div>
  <div class={styles.dialogue}>
    <DialogueTree dialogue="" client:visible />
  </div>
</footer>
