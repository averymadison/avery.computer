---
import { ToggleTheme } from "../Header/ToggleTheme";
---

<footer>
  <div class="toggle">
    <ToggleTheme client:only="react" />
  </div>
  <div class="links">
    <div class="pages">
      <a href="/about">About</a>
      <a href="/projects">Projects</a>
      <a href="/colophon">Colophon</a>
    </div>
    <div class="social">
      <a href="https://github.com/evadecker" target="_blank">GitHub</a>
      <a href="https://www.goodreads.com/evadecker" target="_blank">Goodreads</a
      >
      <a href="https://linkedin.com/in/evadecker" target="_blank">LinkedIn</a>
    </div>
  </div>
</footer>

<style lang="scss">
  footer {
    font-size: var(--step--1);
    width: 100%;
    padding-block: var(--space-l);
    padding-inline: var(--space-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: var(--space-s) var(--space-xl);
  }

  .pages,
  .social {
    display: flex;
    align-items: center;
    gap: var(--space-s);
  }

  .links {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-s);
    flex-wrap: wrap;

    a {
      display: inline-block;

      &:hover {
        color: var(--jade-12);
        text-decoration: underline;
      }
    }
  }

  .toggle {
    width: 32px;
    height: 32px;
  }
</style>
