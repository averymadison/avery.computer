<style lang="scss">
  footer {
    font-size: var(--step--1);
    padding-block: var(--space-2xl);
    width: 100%;
  }

  .content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: row;
    gap: var(--space-m) var(--space-xl);

    @media (width < 800px) {
      flex-direction: column;
    }
  }

  .links {
    display: flex;
    align-items: center;
    gap: var(--space-s);
    flex-wrap: wrap;

    a {
      display: inline-block;

      @media (hover: hover) and (pointer: fine) {
        &:hover {
          color: var(--gray-12);
          text-decoration: underline;
        }
      }
    }
  }

  .banner {
    color: var(--gray-11);
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    transition: background-color 0.2s ease-in-out;

    .emoji {
      transform: scale(1.3) translateY(0.04em);
    }

    @media (hover: hover) and (pointer: fine) {
      &:hover {
        color: var(--gray-12);
      }
    }
  }
</style>
