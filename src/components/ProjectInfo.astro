---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

import ProjectInfoBlock from "./ProjectInfoBlock.astro";

interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
const { timeline, roles, collaborators, tech, repo } = project.data;
---

<dl class="project-info">
  {timeline && <ProjectInfoBlock title="Timeline">{timeline}</ProjectInfoBlock>}
  {
    roles && (
      <ProjectInfoBlock title="My Role">
        <ul>
          {roles.map((role) => (
            <li>{role}</li>
          ))}
        </ul>
      </ProjectInfoBlock>
    )
  }
  {
    collaborators && (
      <ProjectInfoBlock title="Collaborators">
        <ul>
          {collaborators.map((collaborator) => (
            <li>
              <a class="collaborator" href={collaborator.url}>
                <Image
                  src={collaborator.img}
                  alt={`A photo of ${collaborator.name}`}
                  class="avatar"
                />
                <span class="truncate">{collaborator.name}</span>
              </a>
            </li>
          ))}
        </ul>
      </ProjectInfoBlock>
    )
  }
  <!-- {
    tech && (
      <ProjectInfoBlock title="Tech">
        <ul>
          {tech.map((item) => (
            <li>{item}</li>
          ))}
        </ul>
      </ProjectInfoBlock>
    )
  }
  {
    repo && (
      <ProjectInfoBlock title="Source">
        <ul>
          <li>
            <a href={`https://github.com/${repo}`}>View on Github</a>
          </li>
        </ul>
      </ProjectInfoBlock>
    )
  } -->
</dl>

<style lang="scss">
  .project-info {
    display: flex;
    flex-direction: row;
    border: 1px solid var(--gray-5);
    border-radius: var(--radius-m);
    padding: var(--space-l);
    gap: var(--space-xl);

    ul,
    li {
      all: unset;
    }

    li {
      display: block;
    }

    a {
      display: inline-flex;
      align-items: center;
      gap: var(--space-xs);
    }
  }

  .avatar {
    background: var(--gray-4);
    width: var(--space-l);
    height: var(--space-l);
    border-radius: var(--radius-full);
  }

  .truncate {
    min-width: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
</style>
