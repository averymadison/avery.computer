---
import { RelativeDate } from "./RelativeDate/RelativeDate";

interface Props {
  url: string;
  title: string;
  description?: string;
  datePublished?: Date;
}

const { url, title, description, datePublished } = Astro.props;
---

<a class="post" href={url} aria-label={title}>
  <span class="title"> {title}</span>
  <span class="description">{description}</span>
  {datePublished && <RelativeDate date={datePublished} prefix="" />}
</a>

<style lang="scss">
  .post {
    display: inline-flex;
    flex-direction: column;
    align-self: flex-start;

    @media (hover: hover) {
      &:hover {
        .title {
          text-decoration: underline;
        }
      }
    }
  }

  .title {
    font-size: var(--step-1);
    line-height: 1.3;
  }

  .description {
    color: var(--gray-11);
  }
</style>
