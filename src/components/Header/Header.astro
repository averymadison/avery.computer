          d="M9.528 1.718a.75.75 0 01.162.819A8.97 8.97 0 009 6a9 9 0 009 9 8.97 8.97 0 003.463-.69.75.75 0 01.981.98 10.503 10.503 0 01-9.694 6.46c-5.799 0-10.5-4.701-10.5-10.5 0-4.368 2.667-8.112 6.46-9.694a.75.75 0 01.818.162z"
          clip-rule="evenodd"></path>
      </svg>
    </button>
    <div class="animated-circle"></div>
  </div>
</header>

<style>
  header {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--spacing-lg);
  }

  .wordmark {
    font-family: var(--font-display);
    font-weight: 600;
  }

  button[data-theme-toggle] {
    background: transparent;
    cursor: pointer;
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    color: var(--text);
  }

  button[data-theme-toggle]:hover {
    background: var(--bg-hover);
  }

  button[data-theme-toggle]:disabled {
    cursor: default;
  }

  button[data-theme-toggle] svg {
    position: absolute;
    width: 24px;
    height: 24px;
  }

  .moon,
  .moon-hover,
  .sun,
  .sun-hover {
    transform-origin: 50% 200%;
    transition: transform 0.4s ease-out, opacity 0.2s ease-in-out;
  }

  .moon-hover,
  .sun-hover {
    opacity: 0;
  }

  button[data-theme-toggle]:hover .moon-hover,
  button[data-theme-toggle]:hover .sun-hover {
    opacity: 1;
  }

  body[data-theme="dark"] button[data-theme-toggle] .moon,
  body[data-theme="dark"] button[data-theme-toggle] .moon-hover {
    transform: rotate(60deg);
  }

  body[data-theme="light"] button[data-theme-toggle] .sun,
  body[data-theme="light"] button[data-theme-toggle] .sun-hover {
    transform: rotate(-60deg);
  }

  .button-container {
    position: relative;
  }

  .animated-circle {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: var(--bg);
    border-radius: 100%;
    transform-origin: 50% 50%;
    z-index: -1;
    pointer-events: none;
  }

  body[data-animating] .animated-circle {
    animation: expandOut 1s ease-in;
  }

  @keyframes expandOut {
    0% {
      transform: scale(100%);
    }
    100% {
      transform: scale(10000%);
    }
  }
</style>
