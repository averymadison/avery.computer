---
import Center from "../Center.astro";
import { ToggleTheme } from "./ToggleTheme.tsx";
---

<header transition:persist>
  <Center>
    <nav>
      <a class="wordmark" href="/">Eva Decker</a>
      <div class="links">
        <a href="/about">About</a>
      </div>
      <div class="toggle">
        <ToggleTheme client:only="react" />
      </div>
    </nav>
  </Center>
</header>

<style>
  header {
    width: 100%;
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  header::after {
    content: "";
    position: absolute;
    inset: 0;
    z-index: -1;
    background: var(--mauve-1);
    opacity: 0.96;
    box-shadow: 0 1px 0 var(--mauve-a6);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 0;
  }

  .wordmark {
    font-size: var(--text-body);
    font-family: var(--font-sans);
    font-variation-settings:
      "wdth" var(--font-width-wide),
      "wght" 580;
    text-decoration: "none";
    position: "relative";
    bottom: "-0.1em";
  }

  .links {
    display: flex;
    gap: 0.25em;
    margin-inline-start: auto;
    font-size: var(--text-small);
  }

  .links a {
    padding: 0.14em 0.4em 0.08em;
    border-radius: var(--radius-sm);
  }

  .links a:hover {
    background: var(--pink-a3);
    color: var(--pink-12);
  }

  .links a:active {
    background: var(--pink-a4);
    color: var(--pink-12);
  }

  .toggle {
    position: relative;
    width: 40px;
    height: 40px;
    margin-inline-start: 0.5em;
  }
</style>
