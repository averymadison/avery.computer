---
import Center from "../Center.astro";
import { ToggleTheme } from "./ToggleTheme.tsx";
---

<header transition:persist>
  <Center>
    <nav>
      <a class="wordmark" href="/">Eva Decker</a>
      <div class="toggle">
        <ToggleTheme client:only="react" />
      </div>
    </nav>
  </Center>
</header>

<style>
  header {
    width: 100%;
    position: sticky;
    top: 0;
    z-index: 10;
  }

  header::after {
    content: "";
    position: absolute;
    inset: 0;
    z-index: -1;
    background: var(--mauve-1);
    opacity: 0.96;
    border-bottom: 1px solid var(--mauve-a6);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 0;
  }

  .wordmark {
    font-size: var(--text-body);
    font-family: var(--font-sans);
    font-variation-settings:
      "wdth" var(--font-width-wide),
      "wght" 580;
    text-decoration: "none";
    position: "relative";
    bottom: "-0.08em";
  }

  .toggle {
    position: relative;
    width: 40px;
    height: 40px;
  }
</style>
