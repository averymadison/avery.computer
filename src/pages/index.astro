---
import Phone from "../components/Phone.astro";
import Postcard from "../components/Postcard/Postcard.astro";
import Synth from "../components/Synth/Synth.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Eva Decker"
  description="Eva is a designer and web developer based in Brooklyn, NY."
  includeFooter
>
  <div class="grid">
    <h1 class="visuallyhidden">Eva designs and builds for the web</h1>
    <div class="phone">
      <Phone />
    </div>
    <div class="intro">
      <p>
        <strong>Eva Decker</strong>
        <span class="pronouns">(she/they)</span> is a designer and engineer based
        in Brooklyn, NY. She has worked at places like
        <a href="https://www.dropbox.com">Dropbox</a>, <a
          href="https://www.cityblock.com">Cityblock</a
        >, and <a href="https://swiftype.com">Swiftype</a>. She likes writing
        CSS.
      </p>
    </div>
    <div class="synth">
      <Synth />
    </div>
    <div class="postcard">
      <Postcard />
    </div>
  </div>
</BaseLayout>

<style lang="scss">
  .visuallyhidden {
    clip: rect(0 0 0 0);
    clip-path: inset(50%);
    height: 1px;
    overflow: hidden;
    position: absolute;
    white-space: nowrap;
    width: 1px;
  }

  .pronouns {
    color: var(--gray-11);
  }

  .grid {
    display: grid;
    padding: var(--space-xl);
    grid-template:
      "phone intro intro"
      "phone synth synth"
      "postcard postcard postcard";
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-3xl);
    width: 1080px;
    max-width: 100%;
    margin-inline: auto;
    overflow: hidden;

    @media (width < 900px) {
      width: 660px;
      grid-template:
        "phone"
        "intro"
        "synth"
        "postcard";
      align-items: center;
    }
  }

  .phone {
    grid-area: phone;
    display: flex;
    justify-content: center;
  }

  .intro {
    grid-area: intro;
    justify-self: flex-start;

    p {
      font-size: var(--step-1);
      max-width: 36ch;
      transform: rotate(-2deg);
      line-height: 1.2;
    }

    a {
      text-decoration: underline;
      text-decoration-color: var(--gray-11);
      text-underline-offset: 0.1em;

      &:hover {
        text-decoration-color: var(--gray-12);
      }
    }

    @media (width < 900px) {
      place-self: center;

      p {
        max-width: 26ch;
      }
    }
  }

  .synth {
    grid-area: synth;
    display: flex;
    justify-content: center;
  }

  .postcard {
    grid-area: postcard;
  }
</style>
