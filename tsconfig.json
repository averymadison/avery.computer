{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "module": "ES6",
    "target": "ES6",
    "typeRoots": ["./src/types", "./node_modules/@types", "./public/scripts"],
    "paths": {
      "@components": ["src/components"],
      "@helpers": ["src/helpers"],
      "@layouts": ["src/layouts"],
      "@stores/*": ["src/stores/*"],
      "@styles/*": ["src/styles/*"]
    }
  },
  "extends": "astro/tsconfigs/strict",
  "include": [
    "astro.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    "**/*.astro",
    "**/*.js",
    ".eslintrc.js",
    "./src/types/*.d.ts",
    "./public/scripts/*.js"
  ]
}
